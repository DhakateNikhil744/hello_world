<div class="terminal">
    <div class="header">nikhil@portfolio:~$ type <b>help</b></div>
    <div class="output" id="output"></div>
    <div class="input-line">
        <span>$&nbsp;</span>
        <input type="text" id="command" autofocus>
    </div>
</div>

<script>
const output = document.getElementById("output");
const command = document.getElementById("command");

command.addEventListener("keydown", function(e) {
    if (e.key === "Enter") {
        execute(command.value);
        command.value = "";
    }
});

function execute(cmd) {
    output.innerHTML += `<div>$ ${cmd}</div>`;

    switch (cmd.toLowerCase()) {
        case "help":
            output.innerHTML += "<div>Commands: about | skills | projects | contact | clear</div>";
            break;
        case "about":
            output.innerHTML += "<div>üëã I am Nikhil Dhakate, a DevOps & Linux enthusiast.</div>";
            break;
        case "skills":
            output.innerHTML += "<div>‚öôÔ∏è Linux, Docker, AWS, Git, HTML, CSS, JavaScript</div>";
            break;
        case "projects":
            output.innerHTML += "<div>üì¶ AWS Deployment, Dockerized Apps, Linux Automation</div>";
            break;
        case "contact":
            output.innerHTML += "<div>üìß Email: nikhildhakate@example.com</div>";
            break;
        case "clear":
            output.innerHTML = "";
            break;
        default:
            output.innerHTML += "<div>‚ùå Command not found</div>";
    }
}
</script>

